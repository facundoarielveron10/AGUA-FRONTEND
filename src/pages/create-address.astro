---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutAuth from '../layouts/LayoutAuth';
import Create from "../components/address/Create"

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Crear Direccion - Cooperativa O'Brein">
	<LayoutAuth client:only="react" action="CREATE_ADDRESS_DELIVERY">
		<Create client:only="react"/>
	</LayoutAuth>
</Layout>
