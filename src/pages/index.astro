---
// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutAuth from "../layouts/LayoutAuth.jsx";
import Home from 'src/components/home/Home';

// REDIRECT
const isAuth = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(isAuth)) {
	return Astro.redirect("/login")
}
---
<Layout title="Inicio - Cooperativa O'Brein">
	<LayoutAuth client:only="react" action="">
		<Home client:only="react" />
	</LayoutAuth>
</Layout>
