---
// CSS
import '@styles/auth/register.css'

// AUTH
import { isLoggedIn } from '../utils/verifyAuth';

// COMPONENTS
import Layout from '../layouts/Layout.astro';
import LayoutAuth from "../layouts/LayoutAuth.jsx";
import ProfileUser from "../components/profile/Profile.jsx";
import Address from "../components/profile/Address.jsx";

// REDIRECT
const token = Astro.cookies.get("AUTH_TOKEN");
if (!isLoggedIn(token)) {
	return Astro.redirect("/login")
}
---

<Layout title="Perfil - Cooperativa O'Brein" container={true}>
	<LayoutAuth client:only="react" action="GET_PROFILE">
		<ProfileUser client:only="react"/>
        <Address client:only="react"/>
	</LayoutAuth>
</Layout>
